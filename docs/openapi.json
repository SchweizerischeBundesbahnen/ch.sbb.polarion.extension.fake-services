{
  "openapi": "3.0.1",
  "info": {
    "title": "Fake Services REST API",
    "version": "v1"
  },
  "paths": {
    "/api/context": {
      "get": {
        "operationId": "getContext",
        "responses": {
          "default": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Context"
                }
              }
            },
            "description": "Context information"
          }
        },
        "summary": "Returns basic context information of Polarion's extension",
        "tags": [
          "Extension Information"
        ]
      }
    },
    "/api/opentext/api/v1/auth": {
      "post": {
        "operationId": "auth",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "properties": {
                  "password": {
                    "description": "Password",
                    "type": "string"
                  },
                  "username": {
                    "description": "Username",
                    "type": "string"
                  }
                },
                "required": [
                  "password",
                  "username"
                ],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully authenticated"
          },
          "401": {
            "description": "Authentication failed"
          }
        },
        "summary": "Authenticate and get ticket",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/api/v1/nodes": {
      "post": {
        "operationId": "writeFileToContainer",
        "parameters": [
          {
            "description": "Authentication ticket",
            "in": "header",
            "name": "OTCSTICKET",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "properties": {
                  "file": {
                    "description": "File to upload",
                    "type": "object"
                  },
                  "name": {
                    "description": "Document name",
                    "type": "string"
                  },
                  "parent_id": {
                    "description": "Parent ID",
                    "type": "string"
                  },
                  "type": {
                    "description": "Type",
                    "type": "string"
                  }
                },
                "required": [
                  "file",
                  "name",
                  "parent_id",
                  "type"
                ],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully uploaded file"
          },
          "401": {
            "description": "Invalid or missing ticket"
          }
        },
        "summary": "Upload file to container",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/api/v1/nodes/{nodeId}/output": {
      "get": {
        "operationId": "createContainer",
        "parameters": [
          {
            "description": "Authentication ticket",
            "in": "header",
            "name": "OTCSTICKET",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Destination (folder)",
            "in": "query",
            "name": "destination",
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Name",
            "in": "query",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Container ID",
            "in": "query",
            "name": "containerid",
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "File Name",
            "in": "query",
            "name": "filename",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Node ID",
            "in": "path",
            "name": "nodeId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully created container or file existence checked"
          },
          "401": {
            "description": "Invalid or missing ticket"
          }
        },
        "summary": "Create container or check file existence",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/api/v1/nodes/{nodeId}/versions": {
      "post": {
        "operationId": "writeNewFileVersion",
        "parameters": [
          {
            "description": "Node ID",
            "in": "path",
            "name": "nodeId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Authentication ticket",
            "in": "header",
            "name": "OTCSTICKET",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "properties": {
                  "add_major_version": {
                    "description": "Add major version",
                    "type": "string"
                  },
                  "file": {
                    "description": "File to upload",
                    "type": "object"
                  }
                },
                "required": [
                  "add_major_version",
                  "file"
                ],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully uploaded new file version"
          },
          "401": {
            "description": "Invalid or missing ticket"
          }
        },
        "summary": "Upload new file version",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/api/v2/nodes/{nodeId}/versions/{version}/promote": {
      "post": {
        "operationId": "promoteVersion",
        "parameters": [
          {
            "description": "Authentication ticket",
            "in": "header",
            "name": "OTCSTICKET",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Node ID",
            "in": "path",
            "name": "nodeId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Version",
            "in": "path",
            "name": "version",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully promoted version"
          },
          "401": {
            "description": "Invalid or missing ticket"
          }
        },
        "summary": "Promote version",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/manage/containers": {
      "delete": {
        "operationId": "clearContainers",
        "parameters": [
          {
            "description": "Specific ticket id",
            "in": "query",
            "name": "ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully cleared containers list"
          }
        },
        "summary": "Clear containers",
        "tags": [
          "Fake OpenText Content Server"
        ]
      },
      "get": {
        "operationId": "getAllContainers",
        "parameters": [
          {
            "description": "Specific ticket id",
            "in": "query",
            "name": "ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully retrieved all containers"
          }
        },
        "summary": "Get all containers",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/manage/tickets": {
      "delete": {
        "operationId": "clearTickets",
        "parameters": [
          {
            "description": "Specific ticket id",
            "in": "query",
            "name": "ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully cleared tickets list"
          }
        },
        "summary": "Clear tickets",
        "tags": [
          "Fake OpenText Content Server"
        ]
      },
      "get": {
        "operationId": "getAllTickets",
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully retrieved all tickets"
          }
        },
        "summary": "Get all tickets",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/manage/uploads": {
      "delete": {
        "operationId": "clearUploads",
        "parameters": [
          {
            "description": "Specific ticket id",
            "in": "query",
            "name": "ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully cleared uploads list"
          }
        },
        "summary": "Clear all uploads",
        "tags": [
          "Fake OpenText Content Server"
        ]
      },
      "get": {
        "operationId": "getAllUploads",
        "parameters": [
          {
            "description": "Specific ticket id",
            "in": "query",
            "name": "ticket",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully retrieved all uploads"
          }
        },
        "summary": "Get all uploads",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/manage/users": {
      "get": {
        "operationId": "getAllUsers",
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully retrieved all users"
          }
        },
        "summary": "Get all users",
        "tags": [
          "Fake OpenText Content Server"
        ]
      },
      "post": {
        "operationId": "addUser",
        "parameters": [
          {
            "description": "Username",
            "in": "query",
            "name": "username",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Password",
            "in": "query",
            "name": "password",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully added user"
          },
          "400": {
            "description": "User already exists"
          }
        },
        "summary": "Add a new user",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/opentext/manage/users/{username}": {
      "delete": {
        "operationId": "deleteUser",
        "parameters": [
          {
            "description": "Username to delete",
            "in": "path",
            "name": "username",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {}
            },
            "description": "Successfully deleted user"
          },
          "404": {
            "description": "User not found"
          }
        },
        "summary": "Delete a user",
        "tags": [
          "Fake OpenText Content Server"
        ]
      }
    },
    "/api/version": {
      "get": {
        "operationId": "getVersion",
        "responses": {
          "default": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            },
            "description": "Version information"
          }
        },
        "summary": "Returns version of Polarion's extension",
        "tags": [
          "Extension Information"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Context": {
        "description": "Represents the context for building URLs related to Polarion services",
        "properties": {
          "baseUrl": {
            "description": "Returns the base URL constructed with the extension context",
            "type": "string"
          },
          "extensionContext": {
            "description": "The extension context used as a base for URL construction",
            "type": "string"
          },
          "restUrl": {
            "description": "Returns the REST API URL constructed with the extension context",
            "type": "string"
          },
          "swaggerUiUrl": {
            "description": "Returns the Swagger UI URL for the REST API",
            "type": "string"
          }
        },
        "type": "object"
      },
      "Version": {
        "description": "Details about the software version",
        "properties": {
          "automaticModuleName": {
            "description": "The automatic module name",
            "type": "string"
          },
          "bundleBuildTimestamp": {
            "description": "The build timestamp of the bundle",
            "type": "string"
          },
          "bundleName": {
            "description": "The name of the bundle",
            "type": "string"
          },
          "bundleVendor": {
            "description": "The vendor of the bundle",
            "type": "string"
          },
          "bundleVersion": {
            "description": "The version of the bundle",
            "type": "string"
          },
          "projectURL": {
            "description": "The project URL",
            "type": "string"
          },
          "supportEmail": {
            "description": "Support email for the bundle",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  }
}
